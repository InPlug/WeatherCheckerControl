<Window x:Class="Vishnu_UserModules.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:Vishnu_UserModules;assembly=WeatherCheckerControl"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ctrl:WeatherCheckerControl Grid.Row="0"/>
        <Button Grid.Row="1" Click="Button_Click">Refresh</Button>
    </Grid>
</Window>
